<h1>🤜 Task Master 🤛</h1>


<% @tasks.each do |task| %>
  <%if task.completed == false%>
  <% r = "❎" %>
  <% else %>
  <% r = "✅" %>
  <% end %>

  <ul>
    <li><%=r %> <%= link_to task.title, task_path(task) %>, <%=task.details%>
      <%= link_to "🗑", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  </ul>
<% end %>


<p><%= link_to "Create New", new_path %></p>





